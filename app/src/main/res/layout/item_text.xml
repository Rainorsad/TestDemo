<?xml version="1.0" encoding="utf-8"?>
<com.example.wb.testdemo.recyclerviewspreads.SpreadsDrawable xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button android:id="@+id/bt_delete"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="删除"
            />

        <Button android:id="@+id/bt_edit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="编辑"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/tv"
        android:text="头部"
        android:gravity="center_vertical"
        android:background="@color/progreen"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:textSize="13sp"
        />
    </LinearLayout>
</com.example.wb.testdemo.recyclerviewspreads.SpreadsDrawable>