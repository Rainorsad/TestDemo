<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape>

            <padding android:top="2px" android:bottom="2px" android:left="2px" android:right="2px" />
             <corners android:radius="20dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/progreen" />
            <solid android:color="@color/progreen_low" />
          </shape>

    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <padding android:top="2px" android:bottom="2px" android:left="2px" android:right="2px" />
                <corners android:radius="20dp"/>
                <gradient android:startColor="@color/progreen" android:endColor="@color/progreen" android:angle="270.0" />

            </shape>
        </clip>
    </item>
</layer-list>